include _mixins
doctype html
html(lang="ru", itemscope, itemtype="https://schema.org/WebPage")
  head
    include _head

  body(class=bodyClass)
    .page(class=outClass)
      .page__content
        block header
          include ../components/_header
        main.page__main
          block content

      block footer
        include ../components/_footer
      block scripts
        include _scripts
